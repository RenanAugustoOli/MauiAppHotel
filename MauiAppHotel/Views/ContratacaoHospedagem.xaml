<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="Contratação de Hospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

           
            <Label 
                Text="Cálculo da Diária"
                FontFamily="Modak"
                FontSize="48"
                TextColor="{StaticResource Primary}"
                HorizontalOptions="Center"
                Margin="0,20,0,10"
                />

           
            <Frame 
                Padding="20"
                BackgroundColor="White"
                CornerRadius="20"
                HasShadow="True">

                <VerticalStackLayout Spacing="20">

                    <Frame BackgroundColor="{StaticResource Gray200}"
                           Padding="15"
                           CornerRadius="15">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Hóspedes"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="{StaticResource Primary}" />

                            <Grid RowDefinitions="Auto, Auto"
                                  ColumnDefinitions="*, Auto, Auto"
                                  ColumnSpacing="10"
                                  RowSpacing="10">

                                <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" FontSize="18"/>
                                <Label Grid.Row="0" Grid.Column="1" 
                                       TextColor="{StaticResource Primary}"
                                       FontAttributes="Bold"
                                       Text="{Binding Value}" 
                                       BindingContext="{x:Reference stp_adultos}"/>
                                <Stepper Grid.Row="0" Grid.Column="2" 
                                         x:Name="stp_adultos" 
                                         Minimum="0" Maximum="10" 
                                         Increment="1" />

                                <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" FontSize="18"/>
                                <Label Grid.Row="1" Grid.Column="1" 
                                       TextColor="{StaticResource Primary}"
                                       FontAttributes="Bold"
                                       Text="{Binding Value}" 
                                       BindingContext="{x:Reference stp_criancas}"/>
                                <Stepper Grid.Row="1" Grid.Column="2" 
                                         x:Name="stp_criancas" 
                                         Minimum="0" Maximum="10" 
                                         Increment="1" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                
                    <Frame BackgroundColor="{StaticResource Gray200}"
                           Padding="15"
                           CornerRadius="15">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Escolha sua Suíte"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="{StaticResource Primary}" />
                            <Picker x:Name="pck_quarto"
                                    Title="Selecione sua acomodação"
                                    FontSize="16"
                                    TextColor="Black"
                                    BackgroundColor="White" />
                        </VerticalStackLayout>
                    </Frame>

                   
                    <Frame BackgroundColor="{StaticResource Gray200}"
                           Padding="15"
                           CornerRadius="15">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Período da Estadia"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="{StaticResource Primary}" />

                            <Grid ColumnDefinitions="Auto, *, Auto, *"
                                  ColumnSpacing="10"
                                  RowSpacing="10">
                                <Label Grid.Column="0" VerticalOptions="Center" Text="Check-in:" FontSize="16"/>
                                <DatePicker Grid.Column="1"
                                            x:Name="dtpck_checkin"
                                            Format="dd/MM/yyyy"
                                            BackgroundColor="White"/>

                                <Label Grid.Column="2" VerticalOptions="Center" Text="Check-out:" FontSize="16"/>
                                <DatePicker Grid.Column="3"
                                            x:Name="dtpck_checkout"
                                            Format="dd/MM/yyyy"
                                            BackgroundColor="White"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    
                    <Button Text="Avançar"
							Clicked="Button_Clicked"
                            FontAttributes="Bold"
                            FontSize="18"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="55"
                            Margin="0,10,0,0"
                            />

                 
                    <Button Text="Sobre o App"
                    FontAttributes="Bold"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    HorizontalOptions="Center"
                    Clicked="Sobre_Clicked"/>       

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
