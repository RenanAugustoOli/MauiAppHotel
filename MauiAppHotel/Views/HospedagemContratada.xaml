<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="20">

		
			<Label
                Text="Hospedagem Contratada"
                FontFamily="Modak"
                FontSize="48"
                TextColor="{StaticResource Primary}"
                HorizontalOptions="Center"
                Margin="0,20,0,10"/>

		
			<Frame
                Padding="20"
                BackgroundColor="White"
                CornerRadius="20"
                HasShadow="True">

				<VerticalStackLayout Spacing="20">

				
					<Frame BackgroundColor="{StaticResource Gray200}"
                           Padding="15"
                           CornerRadius="15">
						<VerticalStackLayout>
							<Label Text="Suíte Selecionada"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="{StaticResource Primary}" />
							<Label Text="Suíte Super Luxo"
                                   FontFamily="Kalam"
                                   FontSize="30"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="Center" />
						</VerticalStackLayout>
					</Frame>

		
					<Frame BackgroundColor="{StaticResource Gray200}"
                           Padding="15"
                           CornerRadius="15">
						<VerticalStackLayout Spacing="8">
							<Label Text="Hóspedes"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="{StaticResource Primary}" />

							<Grid ColumnDefinitions="*, *" ColumnSpacing="20">
								<HorizontalStackLayout HorizontalOptions="CenterAndExpand">
									<Label Text="Adultos:" FontSize="18"/>
									<Label Text="2"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="18"/>
								</HorizontalStackLayout>

								<HorizontalStackLayout HorizontalOptions="CenterAndExpand">
									<Label Text="Crianças:" FontSize="18"/>
									<Label Text="1"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="18"/>
								</HorizontalStackLayout>
							</Grid>
						</VerticalStackLayout>
					</Frame>

			
					<Frame BackgroundColor="{StaticResource Gray200}"
                           Padding="15"
                           CornerRadius="15">
						<VerticalStackLayout Spacing="8">
							<Label Text="Período da Estadia"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="{StaticResource Primary}" />
							<Grid ColumnDefinitions="*, *, *"
                                  RowDefinitions="Auto, Auto"
                                  ColumnSpacing="15">
								<Label Grid.Row="0" Grid.Column="0" Text="Check-in:" FontSize="16"/>
								<Label Grid.Row="0" Grid.Column="1" Text="Check-out:" FontSize="16"/>
								<Label Grid.Row="0" Grid.Column="2" Text="Estadia:" FontSize="16"/>

								<Label Grid.Row="1" Grid.Column="0" Text="27/05/2024"
                                       TextColor="{StaticResource Primary}"
                                       FontAttributes="Bold"/>
								<Label Grid.Row="1" Grid.Column="1" Text="30/05/2024"
                                       TextColor="{StaticResource Primary}"
                                       FontAttributes="Bold"/>
								<Label Grid.Row="1" Grid.Column="2" Text="3 dias"
                                       TextColor="{StaticResource Primary}"
                                       FontAttributes="Bold"/>
							</Grid>
						</VerticalStackLayout>
					</Frame>

				
					<Frame BackgroundColor="{StaticResource Gray200}"
                           Padding="15"
                           CornerRadius="15">
						<VerticalStackLayout Spacing="8" HorizontalOptions="Center">
							<Label Text="Valor Total"
                                   FontAttributes="Bold"
                                   FontSize="20"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="Center"/>
							<Label Text="R$ 750,00"
                                   FontFamily="Kalam"
                                   FontSize="36"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="Center"/>
						</VerticalStackLayout>
					</Frame>

					<Button Text="Voltar"
                            Clicked="Button_Clicked"
                            FontAttributes="Bold"
                            FontSize="18"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="55"
                            Margin="0,10,0,0"/>
				</VerticalStackLayout>
			</Frame>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
