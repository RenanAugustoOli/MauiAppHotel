<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Sobre este App"
               FontFamily="Modak"
               FontSize="40"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center"/>

        <Frame BackgroundColor="White" Padding="20" CornerRadius="25" HasShadow="True">
            <VerticalStackLayout Spacing="10">

                <Label Text="Desenvolvedor: Renan Augusto de Oliveira Correa"
                       FontSize="18"
                       TextColor="Black"/>

                <Label Text="Ano de desenvolvimento: 2025"
                       FontSize="18"
                       TextColor="Black"/>

                <Label Text="Este aplicativo foi desenvolvido para cálculo de hospedagem em hotéis, com interface moderna e responsiva."
                       FontSize="16"
                       TextColor="Gray"/>
            </VerticalStackLayout>
        </Frame>

        <Button Text="Voltar" BackgroundColor="{StaticResource Primary}" TextColor="White" CornerRadius="25" HeightRequest="50"
                Clicked="Voltar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
